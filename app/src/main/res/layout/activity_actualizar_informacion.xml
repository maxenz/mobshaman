<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.paramedic.mobshaman.activities.ActualizarInformacionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_version_system"
        android:typeface="sans"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/btn_actualizar_diagnosticos"
        android:layout_width="fill_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:padding="11dp"
        android:textSize="@dimen/font_size_buttons"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:text="Actualizar Diagnósticos"
        android:textColor="@android:color/white"
        android:background="@drawable/sel_button_round"
        android:drawableLeft="@drawable/ic_action_av_download"/>

    <Button
        android:id="@+id/btn_actualizar_motivos_no_realizacion"
        android:layout_width="fill_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:padding="11dp"
        android:textSize="@dimen/font_size_buttons"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:text="Actualizar Motivos"
        android:textColor="@android:color/white"
        android:background="@drawable/sel_button_round"
        android:drawableLeft="@drawable/ic_action_av_download"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="fill_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:padding="11dp"
        android:textSize="@dimen/font_size_buttons"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:text="Cerrar Sesión"
        android:textColor="@android:color/white"
        android:background="@color/rojo"
        android:drawableLeft="@drawable/logout"/>

</LinearLayout>
