<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:typeface="sans"
        android:textSize="17sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:id="@+id/txt_header_final_servicio"
        android:background="@drawable/fondo_gris_gradient"
        android:layout_gravity="left" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/verde_color"

        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:id="@+id/txt_pregunta_final_servicio_realizado"
            android:text="¿El servicio fue realizado?"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:typeface="sans"
            android:textSize="17sp"
            android:paddingTop="12dp"/>

        <RadioGroup
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radio_group_final"
            android:layout_alignParentRight="true"
            android:paddingTop="6dp"
            android:layout_alignParentEnd="true">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Si"
                android:id="@+id/radio_final_si" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:id="@+id/radio_final_no" />
        </RadioGroup>

        </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:id="@+id/sep_title_final_servicio"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/verde_color"
        android:layout_marginBottom="20dp"/>

    <AutoCompleteTextView
        android:id="@+id/autocomplete_final_servicio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:hint="Seleccione Diagnóstico"
        android:visibility="gone"
        android:typeface="sans"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:typeface="sans"
        android:textStyle="bold"
        android:id="@+id/et_observaciones_final"
        android:visibility="gone"
        android:hint="Ingrese observaciones"/>

    <Button
        android:id="@+id/btn_finalizar_servicio"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:textSize="@dimen/font_size_buttons"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:typeface="sans"
        android:text="Finalizar Servicio"
        android:textColor="@android:color/white"
        android:background="@drawable/sel_button_round"
        android:drawableLeft="@drawable/ic_action_llegada"
        android:visibility="gone"/>

</LinearLayout>